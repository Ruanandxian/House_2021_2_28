<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="117dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/c_l1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="visible">

            <com.github.florent37.materialtextfield.MaterialTextField
                android:id="@+id/C_M1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_image="@mipmap/duanxin"
                app:mtf_labelColor="#666"
                tools:ignore="MissingConstraints">


                <EditText
                    android:id="@+id/c_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="-.- 寻求帮助"
                    android:textColor="#333"
                    android:textSize="15sp" />
            </com.github.florent37.materialtextfield.MaterialTextField>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_l2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/c_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    app:backgroundTint="#00BCD4"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/c_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    app:backgroundTint="#2196F3"></Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wo_c_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/wo_c_checkBox"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="添加需要求助的内容0.0"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/wo_c_headimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/laji"
                android:visibility="gone" />
        </LinearLayout>
        <!--        <LinearLayout-->
        <!--            android:id="@+id/C_L"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:visibility="visible">-->

        <!--            <com.example.house.myListView-->
        <!--                android:id="@+id/c_Lv"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="match_parent">-->
        <!--            </com.example.house.myListView>-->

        <!--        </LinearLayout>-->

    </LinearLayout>
</LinearLayout>